<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/to_webview"
            android:text="www.baidu.com"
            android:textAllCaps="false"
            android:onClick="onSimpleClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/use_simple_router"
            android:text="jumei://main?username=Haoge&amp;password=&amp;books=Android从入门到放弃&amp;books=颈椎病康复指南&amp;prices=9"
            android:textAllCaps="false"
            android:onClick="onSimpleClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/encode_query"
            android:text="haoge://haoge.cn/parceler?url=haoge%3A%2F%2Faction%2Fsupport%3Fusername%3Dhaoge"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/action_say_hello"
            android:text="haoge://action/support?username=haoge&amp;address=China&amp;strList=hello&amp;strList=world"
            android:textAllCaps="false"
            android:onClick="onSimpleClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/action_subthread"
            android:text="haoge://test/sub/thread/"
            android:textAllCaps="false"
            android:onClick="onSimpleClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/addExtras"
            android:text="添加额外数据跳转"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>

